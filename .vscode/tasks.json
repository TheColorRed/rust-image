  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run",
      "type": "shell",
      "options": {
        "env": {
          "SLINT_BACKEND": "winit-skia"
        }
      },
      "command": "cargo",
      "args": [
        "run",
        "--bin",
        "alakazam"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "~/.cargo/bin/cargo",
      "args": [
        "build",
        "--release",
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
    },
  ]
}