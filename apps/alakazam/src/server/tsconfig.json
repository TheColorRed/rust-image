{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "outDir": "../../dist/server",
    "noEmit": false,
    "moduleResolution": "node",
    "module": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["**/*.ts", "../../bindings/index.d.ts", "../global.d.ts"],
  "exclude": ["preload/preload.ts"]
}
