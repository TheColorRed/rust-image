export component MinimizeButton inherits Rectangle {
    background: ta.has-hover ? #322c27 : transparent;
    width: 58px;

    callback clicked(string);

    Image {
        source: @image-url("../../icons/window-minimize.svg");
        width: 12px;
    }

    ta := TouchArea {
        clicked => {
            root.clicked("minimize");
            // AppState.request-minimize();
        }
    }
}

